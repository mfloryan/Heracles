
[core]
	editor = vim

[color]
	ui = auto

[color "status"]
	added = green
	changed = yellow
	untracked = red
	header = cyan

[color "branch"]
	current = yellow
	local = green
	remote = cyan

[alias]
	co = checkout
	st = status
	who = shortlog -s --
	amend = commit --amend
	last = log -1 HEAD
	lg = log --pretty=tformat:'%h %C(yellow)%cr%Creset %cn %C(cyan)%d%Creset %Cgreen%s%Creset' --graph
