
[core]
	editor = vim

[color]
	ui = auto

[color "status"]
	added = green
	changed = yellow
	untracked = red
	header = cyan

[color "branch"]
	current = yellow
	local = green
	remote = cyan

[alias]
	st = status
	co = checkout
	ft = fetch
	mg = merge
	who = shortlog -s --
	amend = commit --amend
	last = log --pretty=medium -1 HEAD --stat
	lg = log --pretty=tformat:'%h %C(yellow)%cd%Creset %an %C(cyan)%d%Creset %Cgreen%s%Creset' --no-merges -n 20
	lg2 = log --pretty=tformat:'%h %C(yellow)%cr%Creset %cn %C(cyan)%d%Creset %Cgreen%s%Creset' --graph
	lg3 = log --pretty=oneline --abbrev-commit --graph --decorate
	lga = log --glob=* --decorate --oneline --graph
	graph = log --pretty=tformat:'%h %C(yellow)%cr%Creset %cn %C(cyan)%d%Creset %Cgreen%s%Creset' --graph
	unstage = reset HEAD
	purge = clean -xdf
	what = whatchanged

	# From: http://blog.apiaxle.com/post/handy-git-tips-to-stop-you-getting-fired/
	assume   = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
	differ = git diff --patience

[i18n]
	filesEncoding = utf-8

[push]
	default = upstream
